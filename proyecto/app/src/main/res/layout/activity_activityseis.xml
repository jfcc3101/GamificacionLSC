<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activityseis">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

			<ImageView
				android:id="@+id/imageView15"
				android:layout_width="414dp"
				android:layout_height="257dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/as" />

			<TextView
				android:id="@+id/textView10"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="52dp"
				android:layout_marginTop="-230dp"
				android:text="Lenguaje de Señas"
				android:textColor="#FF5722"
				android:textSize="36sp"
				android:textStyle="bold"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />


			<TextView
				android:id="@+id/textView11"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="152dp"
				android:layout_marginTop="1dp"
				android:text="Números"
				android:textColor="#464444"
				android:textSize="30sp"
				android:textStyle="bold"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageView
				android:id="@+id/imageView2"
				android:layout_width="398dp"
				android:layout_height="310dp"
				android:layout_marginStart="4dp"
				android:layout_marginTop="1dp"
				android:scaleType="fitCenter"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/marco" />

			<ImageView
				android:layout_width="260dp"
				android:layout_height="227dp"
				android:layout_marginStart="72dp"
				android:layout_marginTop="-270dp"
				android:src="@drawable/seis"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/textView12"
				android:layout_width="413dp"
				android:layout_height="92dp"
				android:layout_marginTop="25dp"
				android:text="Seis"
				android:textAlignment="center"
				android:textColor="#0720FF"
				android:textSize="60sp"
				android:textStyle="bold"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageButton
				android:id="@+id/derecha"
				android:layout_width="43dp"
				android:layout_height="42dp"
				android:layout_marginStart="288dp"
				android:layout_marginTop="1dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/manoder" />

			<ImageButton
				android:id="@+id/izquierda"
				android:layout_width="48dp"
				android:layout_height="51dp"
				android:layout_marginStart="72dp"
				android:layout_marginTop="-51dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/manoizq" />

			<ImageButton
				android:id="@+id/inicio"
				android:layout_width="74dp"
				android:layout_height="52dp"
				android:layout_marginStart="168dp"
				android:layout_marginTop="-51dp"
				android:scaleType="centerCrop"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/homee" />
		</LinearLayout>
	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>